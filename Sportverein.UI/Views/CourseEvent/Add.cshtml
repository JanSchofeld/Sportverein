@using Sportverein.Shared.Models;
@using Sportverein.UI.ViewModels;

@model  NewEditEventViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit";
}

<form method="post" action="/events/save">
    <div class="form-group">
        <label>Course</label>
        <select asp-for="CourseEvent.CourseId" class="form-control">
        @{
            foreach(var course in @Model.Courses)
            {
                <option value="@course.ID">@course.Name</option>
            }
        }
        </select>
    </div>
    <div class="mb-2">
        <label asp-for="CourseEvent.Description" class="form-label"></label>
        <input class="form-control" asp-for="CourseEvent.Description">
        <span asp-validation-for="CourseEvent.Description" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="CourseEvent.Date" class="form-label"></label>
        <input class="form-control" asp-for="CourseEvent.Date" asp-format="{0:dd.MM.yyyy HH:mm}">
        <span asp-validation-for="CourseEvent.Date" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="/courses/@Model.CourseEvent.CourseId/events" class="btn btn-primary">Back</a>
</form>